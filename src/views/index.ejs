<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <!-- <div class="destacados-container">
                    <h2 class="destacados-titulo">Productos Destacados</h2>
                </div> -->
                <div class="banner-deslizante-container">
                    <div class="banner-deslizante">
                        <p class="banner-texto">
                            ¡HOT SALE! <i class="fa-solid fa-fire ms-5"></i>Descuentos de hasta el 50% en toda la tienda.
                            <i class="fa-solid fa-truck-fast ms-5"></i>Envío gratis en pedidos superiores a $5000. ¡No te lo pierdas!  
                            <i class="fa-solid fa-cart-shopping ms-5"></i>
                        </p>
                        <p class="banner-texto">
                            ¡HOT SALE! <i class="fa-solid fa-fire ms-5"></i>Descuentos de hasta el 50% en toda la tienda.
                            <i class="fa-solid fa-truck-fast ms-5" ></i>Envío gratis en pedidos superiores a $5000. ¡No te lo pierdas!  
                            <i class="fa-solid fa-cart-shopping ms-5"></i>
                        </p>
                    </div>
                </div>
                <section class="carousel">
                    <div class="swiper-container">
                        <div class="swiper-wrapper">
                            <% carouselItems.forEach(product=> { %>
                                <div class="swiper-slide">
                                    <a href="/products/productDetail/<%= product.product_id %>"><img
                                            src="/uploads/<%= product.image %>" alt="<%= product.product_name %>"
                                            class="products-img-ambos"> </a>
                                </div>
                                <% }) %>
                        </div>
                        <div class="swiper-pagination"></div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                </section>

                <div class="banner-deslizante-container">
                    <div class="banner-deslizante">
                        <p class="banner-texto">
                            ¡HOT SALE! <i class="fa-solid fa-fire ms-5"></i>OFERTAS EXCLUSIVAS EN PRODUCTOS SELECCIONADOS
                            <i class="fa-solid fa-truck-fast ms-5"></i>Envío gratis en pedidos superiores a $5000. ¡No te lo pierdas!  
                            <i class="fa-solid fa-cart-shopping ms-5"></i>
                        </p>
                        <p class="banner-texto">
                            ¡HOT SALE! <i class="fa-solid fa-fire ms-5"></i>OFERTAS EXCLUSIVAS EN PRODUCTOS SELECCIONADOS
                            <i class="fa-solid fa-truck-fast ms-5"></i>Envío gratis en pedidos superiores a $5000. ¡No te lo pierdas!  
                            <i class="fa-solid fa-cart-shopping ms-5"></i>
                        </p>
                    </div>
                </div>

                <section class="offers">
                    <% products.forEach(product=> { %>
                        <div class="products">
                            <a href="/products/productDetail/<%= product.product_id %>"><img class="article"
                                    src="/uploads/<%= product.image %>" alt="<%= product.product_name %>"></a>
                            <div class="fav" data-product-id="<%= product.product_id %>"
                                onclick="agregarAlCarrito(this)">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <p class="fs-4">Agregar al carrito</p>
                            </div>
                            <div class="precio">$<%= product.price %>
                            </div>
                            <div class="descr">
                                <%= product.product_name %>
                            </div>
                        </div>
                        </div>
                        <% }) %>
                </section>
            </main>
            <%- include('./partials/_modal-carrito') %>
                <%- include('./partials/footer') %>

                    <script src="/javascripts/carousel.js"></script>
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
                    <script src="/javascripts/cart.js"></script>

    </body>

    </html>